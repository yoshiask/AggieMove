<ResourceDictionary
    x:Class="AggieMove.Themes.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:TamuBusFeed.Models">

    <!-- x:DataType="models:SearchResult" -->
    <DataTemplate x:Key="SearchResultTemplate">
        <TextBlock Padding="0,8">
            <Run Text="{Binding Name}" FontWeight="Bold"/>
            <LineBreak/><Run Text="{Binding Address}" Foreground="{ThemeResource SystemControlDescriptionTextForegroundBrush}"/>
        </TextBlock>
    </DataTemplate>

</ResourceDictionary>
